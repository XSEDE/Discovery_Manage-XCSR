[Unit]
Description=Information Services XCSR Support Contact Router 
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=forking
EnvironmentFile=/soft/warehouse-apps-1.0/Manage-XCSR/PROD/sbin/route_xcsr.sysconfig
ExecStart=/soft/warehouse-apps-1.0/Manage-XCSR/PROD/sbin/router_xcsr.sh start
ExecReload=/soft/warehouse-apps-1.0/Manage-XCSR/PROD/sbin/router_xcsr.sh restart
ExecStop=/soft/warehouse-apps-1.0/Manage-XCSR/PROD/sbin/router_xcsr.sh stop
PIDFile=/soft/warehouse-apps-1.0/Manage-XCSR/var/route_xcsr.pid
#PrivateTmp=true
User=software
Group=admin
Restart=always

[Install]
WantedBy=multi-user.target
